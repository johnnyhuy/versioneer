{
  "compilerOptions": {
    "allowJs": true,
    "watch": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}