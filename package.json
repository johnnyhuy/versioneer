{
  "name": "versioner",
  "version": "1.0.0",
  "description": "üèÜ Standalone tool version your Git repos with standard-version",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --outDir dist",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "package": "pkg dist/index.js --output bin/versioneer --targets node16-macos-x64,node16-macos-arm64,node16-win-x64",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "watch": "tsc -w --outDir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnnyhuy/versioner.git"
  },
  "keywords": [
    "git",
    "version",
    "standard-version",
    "sematic-version",
    "github-actions"
  ],
  "author": "Johnny Huynh <27847622+johnnyhuy@users.noreply.github.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnnyhuy/versioner/issues"
  },
  "homepage": "https://github.com/johnnyhuy/versioner#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "commander": "^8.3.0",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "conventional-github-releaser": "^3.1.5",
    "conventional-recommended-bump": "^6.1.0",
    "git-semver-tags": "^4.1.1",
    "octokit": "^1.7.1",
    "semver": "^7.3.5",
    "simple-git": "^3.1.0"
  },
  "devDependencies": {
    "@types/conventional-changelog-preset-loader": "^2.3.1",
    "@types/conventional-recommended-bump": "^6.1.0",
    "@types/git-semver-tags": "^4.1.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@types/semver": "^7.3.9",
    "chalk": "^4.1.2",
    "eslint": "^8.7.0",
    "mock-stdin": "^1.0.0",
    "pkg": "^5.5.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
